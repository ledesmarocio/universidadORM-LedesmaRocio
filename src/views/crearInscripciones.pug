extends ./layout

block contenido
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Proyecto
            span.font-normal Universidad
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-pink-400.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method='POST' action='/inscripciones' noValidate)
                  
                    
                    div 
                        label.block.text-sm.uppercase.text-gray-500.md-3.font-bold(for="curso_id") Curso
                        select(name="curso_id", class="mt-1 block w-full pl-3 pr-10 py-2 text-base border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm")
                            option(value="") Seleccionar Curso
                            each curso in cursos 
                                option(value=curso.id) #{curso.nombre} - #{curso.descripcion} 

                    div 
                        label.block.text-sm.uppercase.text-gray-500.md-3.font-bold(for="estudiante_id") Estudiante
                        select(name="estudiante_id", class="mt-1 block w-full pl-3 pr-10 py-2 text-base border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm")
                            option(value="") Seleccionar Estudiante
                            each estudiante in estudiantes 
                                option(value=estudiante.id) #{estudiante.nombre} - #{estudiante.apellido} 
                    
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="nota") Nota
                        input#nota.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Nota" type="text" name="nota" value=inscripcion? inscripcion.nota : '')
                    
                    
                    
                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Registrar Inscripci√≥n")
